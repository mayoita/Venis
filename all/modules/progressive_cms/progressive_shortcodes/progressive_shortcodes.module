  }
  $attrs['tag'] = isset($attrs['tag']) ? $attrs['tag'] : 'div';
  $attrs['prefix'] = isset($attrs['prefix']) ? $attrs['prefix'] : '';
  $attrs['suffix'] = isset($attrs['title']) ? $attrs['title'] : '';
  return '<'. $attrs['tag'] .'>'.
    $attrs['prefix'] . '
